<% if @signup.errors.any? %>
<% binding.pry %>
  <p> There were errors in your submission </p>
  <ul>
    <% @signup.errors.each do |key, val| %>
      <li><%= key.capitalize %> <%= val %></li>
    <% end %>
  </ul>
<% end %>

<div id="splash-content">
<h1 class="lg-title">TechThreads</h1>
