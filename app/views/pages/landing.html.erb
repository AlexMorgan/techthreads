</div>


<%= content_for :signup do %>
  <h1>Be the first to slip into TechThreads</h1>
  <%= form_for @signup do |f| %>
    <div>
      <%= f.text_field :email, placeholder: "Enter your email", class: "signup" %>
      <%= f.submit "Signup"%>
    </div>
  <% end %>
<% end %>

